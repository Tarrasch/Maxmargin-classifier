%{
 TBD:       w and b
 Given:     (multi)set D = {xi, yi} (the training data), (n elements)
            where xi is a vector in d-dimensional space
            and  yi is Â±1 depending in group it belongs in
            
            We simply represent that multiset as X[n][d] and Y[n] 
%}

% Load data and assign fine names to variables
load('excercise1');
X = train_data;
Y = train_label;
clear train_data train_label;
[n, d] = size(X);

C = 1;

% Solve optimization problem
cvx_begin
    variable alpha(n)
    %minimize ( sum(alpha) - sum( sum( (alpha*alpha').*(Y*Y').*(X'*X)/2) ) )
    minimize ( sum(alpha) - )
    subject to
        alpha.*Y == 0;
        0 <= alpha;
        alpha <= C;
cvx_end

% Plot on a graph
plot(0,0);
hold on
for i = 1:n
    if Y(i) > 0
        plot(X(i,1),X(i,2),'.')
    else
        plot(X(i,1),X(i,2),'r.')
    end
    if alpha(i) > 0.0000001
        plot(X(i,1),X(i,2),'ko')
    end
end

